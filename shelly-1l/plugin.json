          "api": {
            "relay": {
              "description": "Relay Control",
              "enabled": true,
              "request": {
                "data": {
                  "payload": "{{payload:toOnOff=property.relay}}",
                  "target": "topic",
                  "topic": "shellies/{{device}}/relay/0/command"
